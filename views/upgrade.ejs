                    </div>
                    <p class="mt-5 text-lg text-gray-500">Perfect for testing and small projects</p>
                </div>
                <div class="px-6 pt-6 pb-8 bg-gray-50">
                    <ul class="space-y-4">
                        <li class="flex items-start">
                            <div class="flex-shrink-0">
                                <i class="fas fa-check text-primary"></i>
                            </div>
                            <p class="ml-3 text-base text-gray-700">6 requests per day</p>
                        </li>
                        <li class="flex items-start">
                            <div class="flex-shrink-0">
                                <i class="fas fa-check text-primary"></i>
                            </div>
                            <p class="ml-3 text-base text-gray-700">Basic API access</p>
                        </li>
                        <li class="flex items-start">
                            <div class="flex-shrink-0">
                                <i class="fas fa-check text-primary"></i>
                            </div>
                            <p class="ml-3 text-base text-gray-700">Reset daily at 6 AM</p>
                        </li>
                        <li class="flex items-start">
                            <div class="flex-shrink-0">
                                <i class="fas fa-check text-primary"></i>
                            </div>
                            <p class="ml-3 text-base text-gray-700">Community support</p>
                        </li>
                    </ul>
                    <div class="mt-6">
                        <% if (user.plan === 'free') { %>
                            <button class="w-full bg-gray-300 text-gray-700 px-3 py-4 rounded-md text-lg font-medium cursor-not-allowed">
                                Current Plan
                            </button>
                        <% } else { %>
                            <button onclick="downgradeToFree()" class="w-full bg-gray-100 text-gray-700 px-3 py-4 rounded-md text-lg font-medium hover:bg-gray-200">
                                Downgrade to Free
                            </button>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Starter Plan -->
            <div class="bg-white rounded-lg shadow-lg overflow-hidden transform scale-105 <%= user.plan === 'starter' ? 'ring-2 ring-secondary' : '' %>">

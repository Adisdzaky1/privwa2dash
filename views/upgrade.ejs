            <!-- Pro Plan -->
            <div class="bg-white rounded-lg shadow-lg overflow-hidden <%= user.plan === 'pro' ? 'ring-2 ring-yellow-500' : '' %>">
                <div class="px-6 py-8">
                    <div class="flex items-center">
                        <i class="fas fa-crown text-3xl text-yellow-500 mr-3"></i>
                        <h3 class="text-2xl font-bold text-gray-900">Pro</h3>
                        <% if (user.plan === 'pro') { %>
                            <span class="ml-auto bg-yellow-100 text-yellow-800 text-xs font-semibold rounded-full px-3 py-1">CURRENT</span>
                        <% } %>
                    </div>
                    <div class="mt-4 flex items-baseline text-6xl font-extrabold">

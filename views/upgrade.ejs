<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0 flex items-center">
                        <i class="fab fa-whatsapp text-3xl text-primary mr-2"></i>
                        <span class="text-2xl font-bold text-gray-900">WhatsGate</span>
                        <span class="ml-2 text-sm font-medium text-gray-500">Upgrade Plan</span>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/dashboard" class="text-gray-700 hover:text-primary px-3 py-2 rounded-md text-sm font-medium">
                        <i class="fas fa-arrow-left mr-1"></i> Back to Dashboard
                    </a>
                    <a href="https://t.me/Oficiallz" target="_blank" class="bg-blue-500 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-blue-600">
                        <i class="fab fa-telegram mr-1"></i> Support
                    </a>
                    <% if (user) { %>
                        <div class="relative group">
                            <button class="flex items-center text-gray-700 hover:text-primary focus:outline-none">
                                <i class="fas fa-user-circle text-2xl"></i>
                                <span class="ml-2"><%= user.email %></span>
                            </button>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Upgrade Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Current Plan Info -->
        <div class="bg-white rounded-lg shadow p-6 mb-8">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-bold text-gray-900">Current Plan</h2>
                    <p class="text-gray-600 mt-1">Your current subscription details</p>
                </div>
                <div class="text-right">
                    <span class="px-4 py-2 bg-primary text-white rounded-lg text-lg font-semibold capitalize">
                        <%= user.plan || 'free' %> Plan
                    </span>
                    <% if (user.plan === 'free') { %>
                        <p class="text-sm text-gray-500 mt-1">6 requests per day</p>
                    <% } else if (user.plan === 'starter') { %>
                        <p class="text-sm text-gray-500 mt-1">100 requests per day</p>
                    <% } else if (user.plan === 'pro') { %>
                        <p class="text-sm text-gray-500 mt-1">500 requests per day</p>
                    <% } else if (user.plan === 'enterprise') { %>
                        <p class="text-sm text-gray-500 mt-1">2000+ requests per day</p>
                    <% } %>
                </div>
            </div>
            
            <% if (user.plan !== 'free') { %>
                <div class="mt-4 p-4 bg-green-50 border border-green-200 rounded-lg">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-calendar-check text-green-600"></i>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-green-800">Active Subscription</h3>
                            <div class="mt-1 text-sm text-green-700">
                                <p>Your plan is active and will automatically renew.</p>
                            </div>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="mt-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-rocket text-blue-600"></i>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-blue-800">Ready to Upgrade?</h3>
                            <div class="mt-1 text-sm text-blue-700">
                                <p>Upgrade your plan to get more API requests and premium features.</p>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Pricing Plans -->
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900">Choose Your Plan</h2>
            <p class="mt-4 text-xl text-gray-600">Select the perfect plan for your needs</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Free Plan -->
            <div class="bg-white rounded-lg shadow-lg overflow-hidden <%= user.plan === 'free' ? 'ring-2 ring-primary' : '' %>">
                <div class="px-6 py-8">
                    <div class="flex items-center">
                        <i class="fas fa-rocket text-3xl text-primary mr-3"></i>

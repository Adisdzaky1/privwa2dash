        <p class="text-gray-600">Please wait...</p>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="toast">
        <div class="card max-w-md">
            <div class="flex items-center p-4">
                <i id="toast-icon" class="fas fa-check-circle text-green-500 text-xl mr-3"></i>

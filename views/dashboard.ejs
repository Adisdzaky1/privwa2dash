    <script>
        // ==================== GLOBAL VARIABLES ====================
        let isApiKeyVisible = false;
        let currentSection = 'overview';
        let statsInterval = null;
        
        // ==================== DEBUG LOG ====================
        console.log('=== WHATSGATE DASHBOARD LOADED ===');
        console.log('User:', '<%= user.username %>');
        console.log('Plan:', '<%= user.plan %>');
        console.log('API Key:', '<%= user.api_key ? "***" + user.api_key.slice(-8) : "N/A" %>');
        
        // ==================== INITIALIZATION ====================
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ DOM fully loaded');
            
            // Show loading
            document.getElementById('loading').style.display = 'flex';
            
            // Initialize after a short delay
            setTimeout(initializeDashboard, 100);
        });
        
        function initializeDashboard() {
            console.log('üîß Initializing dashboard...');
            
            // 1. Setup event listeners
            setupEventListeners();
            
            // 2. Show initial section
            const hash = window.location.hash.substring(1) || 'overview';
            showSection(hash);
            
            // 3. Start stats updates
            startStatsUpdates();
            
            // 4. Hide loading
            setTimeout(() => {
                document.getElementById('loading').style.display = 'none';
                console.log('‚úÖ Dashboard initialized successfully');
            }, 300);
        }
        
        function setupEventListeners() {
            console.log('üîó Setting up event listeners...');
            
            // 1. API Key toggle button
            const toggleBtn = document.getElementById('toggleApiKeyButton');
            if (toggleBtn) {
                toggleBtn.addEventListener('click', toggleApiKey);
                console.log('‚úÖ API Key toggle button listener added');
            }
            
            // 2. API Key copy button
            const copyBtn = document.getElementById('copyApiKeyButton');
            if (copyBtn) {
                copyBtn.addEventListener('click', copyApiKey);
                console.log('‚úÖ API Key copy button listener added');
            }
            
            // 3. Logout button
            const logoutBtn = document.querySelector('button[onclick*="handleLogout"]');
            if (logoutBtn) {
                logoutBtn.addEventListener('click', handleLogout);
                console.log('‚úÖ Logout button listener added');
            }
            
            // 4. Mobile overlay
            const overlay = document.getElementById('mobileOverlay');
            if (overlay) {
                overlay.addEventListener('click', closeSidebar);
            }
            
            // 5. Navigation links
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                if (link.getAttribute('onclick')) {
                    const section = link.getAttribute('onclick').match(/'([^']+)'/)[1];
                    link.addEventListener('click', () => showSection(section));
                }
            });
            
            // 6. Sidebar toggle button
            const sidebarToggle = document.querySelector('button[onclick*="toggleSidebar"]');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', toggleSidebar);
            }
            
            console.log('‚úÖ All event listeners set up');
        }
        
        // ==================== SIDEBAR FUNCTIONS ====================
        function toggleSidebar() {
            console.log('üì± Toggling sidebar');
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobileOverlay');
            
            if (sidebar) {
                sidebar.classList.toggle('active');
            }
            if (overlay) {
                overlay.classList.toggle('active');
            }
            
            // Prevent body scroll when sidebar is open
            if (sidebar.classList.contains('active')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = '';
            }
        }
        
        function closeSidebar() {
            console.log('üì± Closing sidebar');
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobileOverlay');
            
            if (sidebar) {
                sidebar.classList.remove('active');
            }
            if (overlay) {
                overlay.classList.remove('active');
            }
            document.body.style.overflow = '';
        }
        
        // ==================== SECTION MANAGEMENT ====================
        function showSection(section) {
            console.log('üìÇ Showing section:', section);
            
            // Hide all sections
            document.querySelectorAll('main > section').forEach(sec => {
                sec.classList.add('hidden');
            });
            
            // Show selected section
            const targetSection = document.getElementById(section + '-section');
            if (targetSection) {
                targetSection.classList.remove('hidden');
                currentSection = section;
                
                // Update URL hash without scrolling
                if (history.replaceState) {
                    history.replaceState(null, null, '#' + section);
                }
                
                // Update active nav
                updateActiveNav(section);
            }
            
            // Close sidebar on mobile
            if (window.innerWidth < 768) {
                closeSidebar();
            }
        }
        
        function updateActiveNav(section) {
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
                
                // Extract section from onclick attribute
                const onclickAttr = link.getAttribute('onclick');
                if (onclickAttr && onclickAttr.includes(section)) {
                    link.classList.add('active');
                }
            });
        }
        
        // ==================== API KEY FUNCTIONS ====================
        function toggleApiKey() {
            console.log('üëÅÔ∏è Toggling API key visibility');
            const input = document.getElementById('apiKeyInput');
            const eyeIcon = document.getElementById('eyeIcon');
            const eyeText = document.getElementById('eyeText');
            
            if (!input) {
                console.error('‚ùå API Key input not found');
                showToast('API Key input not found', 'error');
                return;
            }
            
            isApiKeyVisible = !isApiKeyVisible;
            input.type = isApiKeyVisible ? 'text' : 'password';
            
            if (eyeIcon) {
                eyeIcon.className = isApiKeyVisible ? 'fas fa-eye-slash mr-2' : 'fas fa-eye mr-2';
            }
            
            if (eyeText) {
                eyeText.textContent = isApiKeyVisible ? 'Hide' : 'Show';
            }
            
            // Auto-hide after 10 seconds
            if (isApiKeyVisible) {
                setTimeout(() => {
                    if (isApiKeyVisible) {
                        toggleApiKey();
                    }
                }, 10000);
            }
        }
        
        async function copyApiKey() {
            console.log('üìã Copying API key');
            const input = document.getElementById('apiKeyInput');
            
            if (!input) {
                console.error('‚ùå API Key input not found');
                showToast('API Key input not found', 'error');
                return;
            }
            
            try {
                // Select text
                input.select();
                input.setSelectionRange(0, 99999);
                
                // Try modern clipboard API first
                if (navigator.clipboard && window.isSecureContext) {
                    await navigator.clipboard.writeText(input.value);
                    console.log('‚úÖ API key copied using Clipboard API');
                } else {
                    // Fallback for older browsers
                    document.execCommand('copy');
                    console.log('‚úÖ API key copied using execCommand');
                }
                
                // Show success toast
                showToast('API Key copied to clipboard!', 'success');
                
                // Visual feedback on button
                const copyBtn = document.getElementById('copyApiKeyButton');
                if (copyBtn) {
                    const originalHTML = copyBtn.innerHTML;
                    const originalClasses = copyBtn.className;
                    
                    copyBtn.innerHTML = '<i class="fas fa-check mr-2"></i>Copied!';
                    copyBtn.className = originalClasses.replace('bg-white', 'bg-green-500').replace('text-primary-700', 'text-white');
                    
                    setTimeout(() => {
                        copyBtn.innerHTML = originalHTML;
                        copyBtn.className = originalClasses;
                    }, 2000);
                }
                
            } catch (err) {
                console.error('‚ùå Failed to copy:', err);
                showToast('Failed to copy. Please copy manually.', 'error');
            }
        }
        
        // ==================== LOGOUT FUNCTION ====================
        async function handleLogout() {
            console.log('üö™ Logout requested');
            
            if (!confirm('Are you sure you want to logout?')) {
                return;
            }
            
            try {
                // Show loading
                document.getElementById('loading').style.display = 'flex';
                
                console.log('üîÑ Sending logout request...');
                
                // Send logout request
                const response = await fetch('/auth/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    credentials: 'include' // IMPORTANT: include cookies
                });
                
                console.log('üìä Logout response status:', response.status);
                
                const data = await response.json();
                console.log('üìä Logout response data:', data);
                
                if (data.success || response.ok) {
                    console.log('‚úÖ Logout successful, redirecting...');
                    
                    // Clear any local storage
                    localStorage.clear();
                    sessionStorage.clear();
                    
                    // Redirect to login
                    window.location.href = data.redirect || '/login';
                    
                } else {
                    throw new Error(data.error || 'Logout failed');
                }
                
            } catch (error) {
                console.error('‚ùå Logout error:', error);
                showToast(`Logout failed: ${error.message}`, 'error');
                
                // Fallback: try direct redirect after 2 seconds
                setTimeout(() => {
                    console.log('üîÑ Fallback redirect to login');
                    window.location.href = '/login';
                }, 2000);
                
            } finally {
                document.getElementById('loading').style.display = 'none';
            }
        }
        
        // ==================== UTILITY FUNCTIONS ====================
        function showToast(message, type = 'success') {
            console.log('üí¨ Toast:', message, type);
            
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = document.getElementById('toastIcon');
            
            if (!toast || !toastMessage || !toastIcon) {
                console.error('‚ùå Toast elements not found');
                return;
            }
            
            // Set message
            toastMessage.textContent = message;
            
            // Set icon based on type
            switch(type) {
                case 'success':
                    toastIcon.className = 'fas fa-check-circle text-green-400';
                    break;
                case 'error':
                    toastIcon.className = 'fas fa-exclamation-circle text-red-400';
                    break;
                case 'warning':
                    toastIcon.className = 'fas fa-exclamation-triangle text-yellow-400';
                    break;
                default:
                    toastIcon.className = 'fas fa-info-circle text-blue-400';
            }
            
            // Show toast
            toast.classList.remove('translate-x-full');
            
            // Hide after 3 seconds
            setTimeout(() => {
                toast.classList.add('translate-x-full');
            }, 3000);
        }
        
        function startStatsUpdates() {
            console.log('üìà Starting stats updates');
            
            // Update immediately
            updateStats();
            
            // Then update every 30 seconds
            statsInterval = setInterval(updateStats, 30000);
        }
        
        async function updateStats() {
            try {
                console.log('üîÑ Updating stats...');
                
                const response = await fetch('/api/stats', {
                    credentials: 'include'
                });
                
                if (response.ok) {
                    const data = await response.json();
                    
                    if (data.success) {
                        // Update total requests counter
                        const totalEl = document.getElementById('totalRequestsAll');
                        if (totalEl) {
                            totalEl.textContent = data.data.global.total_requests.toLocaleString();
                            console.log('üìä Updated stats:', data.data.global.total_requests);
                        }
                    }
                }
            } catch (error) {
                console.warn('‚ö†Ô∏è Stats update failed:', error);
            }
        }
        
        // ==================== WINDOW EVENT LISTENERS ====================
        // Handle hash changes
        window.addEventListener('hashchange', function() {
            const hash = window.location.hash.substring(1) || 'overview';
            if (hash !== currentSection) {
                showSection(hash);
            }
        });
        
        // Handle page unload
        window.addEventListener('beforeunload', () => {
            if (statsInterval) {
                clearInterval(statsInterval);
            }
        });
        
        // Handle global errors
        window.addEventListener('error', function(e) {
            console.error('üåê Global error:', e.error);
        });
        
        // ==================== EXPORT FUNCTIONS TO GLOBAL SCOPE ====================
        // This is important for inline onclick handlers
        window.toggleSidebar = toggleSidebar;
        window.closeSidebar = closeSidebar;
        window.showSection = showSection;
        window.toggleApiKey = toggleApiKey;
        window.copyApiKey = copyApiKey;
        window.handleLogout = handleLogout;
        
        console.log('‚úÖ All dashboard functions loaded and ready');
    </script>
</body>

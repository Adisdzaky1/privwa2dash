                        </div>
                    </div>
                </section>
            </main>
            
            <!-- ===== BOTTOM NAVIGATION (MOBILE ONLY) ===== -->
            <nav class="bottom-nav md:hidden">
                <div onclick="showSection('overview')" class="bottom-nav-item <%= currentSection === 'overview' ? 'active' : '' %>">
                    <i class="fas fa-chart-pie"></i>
                    <span>Overview</span>
                </div>
                
                <div onclick="showSection('api')" class="bottom-nav-item <%= currentSection === 'api' ? 'active' : '' %>">
                    <i class="fas fa-code"></i>
                    <span>API</span>
                </div>
                
                <div onclick="showSection('info')" class="bottom-nav-item <%= currentSection === 'info' ? 'active' : '' %>">
                    <i class="fas fa-info-circle"></i>
                    <span>Info</span>
                </div>
                
                <div onclick="showSection('upgrade')" class="bottom-nav-item <%= currentSection === 'upgrade' ? 'active' : '' %>">
                    <i class="fas fa-rocket"></i>
                    <span>Upgrade</span>
                </div>
                
                <div onclick="toggleSidebar()" class="bottom-nav-item">
                    <i class="fas fa-bars"></i>
                    <span>Menu</span>
                </div>
            </nav>
        </div>
    </div>
    
    <!-- ===== JAVASCRIPT ===== -->
    <script>
        // ===== GLOBAL STATE =====
        let currentSection = 'overview';
        let isApiKeyVisible = false;
        let statsInterval = null;
        let isSidebarOpen = false;
        
        // ===== DEBUG =====
        console.log('ðŸ“± WhatsGate Dashboard Loaded');
        console.log('User:', '<%= user.username %>');
        console.log('Device:', isMobile() ? 'Mobile' : 'Desktop');
        console.log('Current Plan:', '<%= user.plan %>');
        
        // ===== UTILITY FUNCTIONS =====
        function isMobile() {
            return window.innerWidth <= 768;
        }
        
        function showToast(message, description = '', type = 'success') {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            const toastDescription = document.getElementById('toastDescription');
            const toastIcon = document.getElementById('toastIcon');
            
            // Set content
            toastMessage.textContent = message;
            toastDescription.textContent = description;
            
            // Set icon based on type
            const icons = {
                success: 'fa-check-circle text-green-500',
                error: 'fa-exclamation-circle text-red-500',
                warning: 'fa-exclamation-triangle text-yellow-500',
                info: 'fa-info-circle text-blue-500'
            };
            
            toastIcon.className = `fas ${icons[type] || icons.info} text-xl mt-0.5`;
            
            // Show toast
            toast.classList.add('show');
            
            // Auto hide after 4 seconds
            setTimeout(hideToast, 4000);
        }
        
        function hideToast() {
            document.getElementById('toast').classList.remove('show');
        }
        
        function showLoading() {
            document.getElementById('loadingOverlay').classList.add('active');
        }
        
        function hideLoading() {
            document.getElementById('loadingOverlay').classList.remove('active');
        }
        
        // ===== SIDEBAR FUNCTIONS =====
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobileOverlay');
            
            isSidebarOpen = !isSidebarOpen;
            
            if (isSidebarOpen) {
                sidebar.classList.add('active');
                overlay.classList.add('active');
                document.body.style.overflow = 'hidden'; // Prevent scrolling
            } else {
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
                document.body.style.overflow = '';
            }
            
            console.log('ðŸ“± Sidebar:', isSidebarOpen ? 'Open' : 'Closed');
        }
        
        function closeSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobileOverlay');
            
            isSidebarOpen = false;
            sidebar.classList.remove('active');
            overlay.classList.remove('active');
            document.body.style.overflow = '';
        }
        
        // ===== NAVIGATION FUNCTIONS =====
        function showSection(section) {
            console.log('ðŸ“± Showing section:', section);
            
            // Hide all sections
            document.querySelectorAll('main > section').forEach(el => {
                el.classList.add('hidden');
            });
            
            // Show selected section
            const targetSection = document.getElementById(section + '-section');
            if (targetSection) {
                targetSection.classList.remove('hidden');
                currentSection = section;
                
                // Update URL hash
                history.replaceState(null, null, '#' + section);
                
                // Update sidebar active item
                updateSidebarActive(section);
                
                // Update bottom nav active item
                updateBottomNavActive(section);
                
                // Close sidebar on mobile
                if (isMobile()) {
                    closeSidebar();
                }
                
                // Scroll to top on mobile
                if (isMobile()) {
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }
            }
        }
        
        function updateSidebarActive(section) {
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
                // Check if this item corresponds to the section
                if (item.onclick && item.onclick.toString().includes(section)) {
                    item.classList.add('active');
                }
            });
        }
        
        function updateBottomNavActive(section) {
            document.querySelectorAll('.bottom-nav-item').forEach(item => {
                item.classList.remove('active');
                if (item.onclick && item.onclick.toString().includes(section)) {
                    item.classList.add('active');
                }
            });
        }
        
        // ===== API KEY FUNCTIONS =====
        function toggleApiKey() {
            const input = document.getElementById('apiKeyInput');
            const eyeIcon = document.getElementById('eyeIcon');
            const eyeText = document.getElementById('eyeText');
            
            if (!input) {
                console.error('âŒ API Key input not found');
                showToast('Error', 'API Key input not found', 'error');
                return;
            }
            
            isApiKeyVisible = !isApiKeyVisible;
            
            if (isApiKeyVisible) {
                input.type = 'text';
                eyeIcon.className = 'fas fa-eye-slash mr-2';
                eyeText.textContent = 'Hide Key';
                showToast('API Key Visible', 'Key will auto-hide in 10 seconds', 'warning');
                
                // Auto-hide after 10 seconds
                setTimeout(() => {
                    if (isApiKeyVisible) {
                        toggleApiKey();
                    }
                }, 10000);
            } else {
                input.type = 'password';
                eyeIcon.className = 'fas fa-eye mr-2';
                eyeText.textContent = 'Show Key';
            }
        }
        
        async function copyApiKey() {
            const input = document.getElementById('apiKeyInput');
            
            if (!input) {
                console.error('âŒ API Key input not found');
                showToast('Error', 'API Key input not found', 'error');
                return;
            }
            
            try {
                // Select text
                input.select();
                input.setSelectionRange(0, 99999);
                
                // Use Clipboard API if available
                if (navigator.clipboard && window.isSecureContext) {
                    await navigator.clipboard.writeText(input.value);
                } else {
                    // Fallback for older browsers
                    document.execCommand('copy');
                }
                
                // Visual feedback
                const copyBtn = document.getElementById('copyApiKeyBtn');
                const copySuccess = document.getElementById('copySuccess');
                
                if (copyBtn) {
                    const originalHTML = copyBtn.innerHTML;
                    copyBtn.innerHTML = '<i class="fas fa-check mr-2"></i>Copied!';
                    copyBtn.classList.add('bg-green-500', 'text-white', 'hover:bg-green-600');
                    
                    setTimeout(() => {
                        copyBtn.innerHTML = originalHTML;
                        copyBtn.classList.remove('bg-green-500', 'text-white', 'hover:bg-green-600');
                    }, 2000);
                }
                
                if (copySuccess) {
                    copySuccess.classList.remove('hidden');
                    setTimeout(() => {
                        copySuccess.classList.add('hidden');
                    }, 2000);
                }
                
                showToast('API Key Copied', 'Key copied to clipboard', 'success');
                
            } catch (err) {
                console.error('âŒ Failed to copy:', err);
                showToast('Copy Failed', 'Please copy manually', 'error');
            }
        }
        
        // ===== LOGOUT FUNCTION =====
        async function handleLogout() {
            if (!confirm('Are you sure you want to logout?')) {
                return;
            }
            
            try {
                showLoading();
                console.log('ðŸšª Logout requested');
                
                const response = await fetch('/auth/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    credentials: 'include'
                });
                
                const data = await response.json();
                
                if (data.success || response.ok) {
                    console.log('âœ… Logout successful');
                    
                    // Clear local storage
                    localStorage.clear();
                    sessionStorage.clear();
                    
                    // Redirect to login
                    window.location.href = data.redirect || '/login';
                    
                } else {
                    throw new Error(data.error || 'Logout failed');
                }
                
            } catch (error) {
                console.error('âŒ Logout error:', error);
                showToast('Logout Failed', error.message, 'error');
                
                // Fallback redirect
                setTimeout(() => {
                    window.location.href = '/login';
                }, 2000);
                
            } finally {
                hideLoading();
            }
        }
        
        // ===== STATS UPDATE =====
        async function updateStats() {
            try {
                const response = await fetch('/api/stats', {
                    credentials: 'include'
                });
                
                if (response.ok) {
                    const data = await response.json();
                    
                    if (data.success) {
                        const totalEl = document.getElementById('totalRequestsAll');
                        if (totalEl) {
                            totalEl.textContent = data.data.global.total_requests.toLocaleString();
                        }
                    }
                }
            } catch (error) {
                console.warn('âš ï¸ Stats update failed:', error);
            }
        }
        
        function refreshActivity() {
            showToast('Refreshing', 'Updating recent activity...', 'info');
            
            // Simulate refresh
            setTimeout(() => {
                showToast('Refreshed', 'Activity updated successfully', 'success');
            }, 1000);
        }
        
        // ===== INITIALIZATION =====
        document.addEventListener('DOMContentLoaded', function() {
            console.log('ðŸš€ Dashboard initialized');
            
            // Hide loading after everything is ready
            setTimeout(hideLoading, 500);
            
            // Check initial hash or set default
            const hash = window.location.hash.substring(1);
            if (hash && ['overview', 'api', 'info', 'upgrade'].includes(hash)) {
                currentSection = hash;
            }
            
            // Show initial section
            showSection(currentSection);
            
            // Bind event listeners
            setupEventListeners();
            
            // Start stats updates
            statsInterval = setInterval(updateStats, 30000);
            
            // Initial stats update
            setTimeout(updateStats, 1000);
            
            // Add touch gestures for mobile
            if (isMobile()) {
                setupTouchGestures();
            }
        });
        
        function setupEventListeners() {
            console.log('ðŸ”— Setting up event listeners');
            
            // API Key buttons
            const toggleBtn = document.getElementById('toggleApiKeyBtn');
            const copyBtn = document.getElementById('copyApiKeyBtn');
            
            if (toggleBtn) {
                toggleBtn.addEventListener('click', toggleApiKey);
            }
            
            if (copyBtn) {
                copyBtn.addEventListener('click', copyApiKey);
            }
            
            // Logout button in sidebar
            const logoutBtn = document.querySelector('button[onclick*="handleLogout"]');
            if (logoutBtn) {
                logoutBtn.addEventListener('click', handleLogout);
            }
            
            // Mobile overlay
            const overlay = document.getElementById('mobileOverlay');
            if (overlay) {
                overlay.addEventListener('click', closeSidebar);
            }
            
            // Navigation items in sidebar
            document.querySelectorAll('.nav-item').forEach(item => {
                if (item.onclick) {
                    const section = item.onclick.toString().match(/showSection\('([^']+)'\)/)[1];
                    item.addEventListener('click', () => showSection(section));
                }
            });
            
            // Bottom navigation items
            document.querySelectorAll('.bottom-nav-item').forEach(item => {
                if (item.onclick) {
                    const section = item.onclick.toString().match(/showSection\('([^']+)'\)/)[1];
                    item.addEventListener('click', () => showSection(section));
                }
            });
            
            // Handle window resize
            window.addEventListener('resize', handleResize);
            
            // Handle hash changes
            window.addEventListener('hashchange', handleHashChange);
        }
        
        function setupTouchGestures() {
            let touchStartX = 0;
            let touchStartY = 0;
            
            document.addEventListener('touchstart', function(e) {
                touchStartX = e.touches[0].clientX;
                touchStartY = e.touches[0].clientY;
            }, { passive: true });
            
            document.addEventListener('touchend', function(e) {
                const touchEndX = e.changedTouches[0].clientX;
                const touchEndY = e.changedTouches[0].clientY;
                
                const diffX = touchStartX - touchEndX;
                const diffY = touchStartY - touchEndY;
                
                // Only consider horizontal swipes
                if (Math.abs(diffX) > Math.abs(diffY) && Math.abs(diffX) > 50) {
                    // Swipe right to open sidebar (from left edge)
                    if (diffX < 0 && touchStartX < 50) {
                        toggleSidebar();
                    }
                }
            }, { passive: true });
        }
        
        function handleResize() {
            // Close sidebar when switching from mobile to desktop
            if (!isMobile() && isSidebarOpen) {
                closeSidebar();
            }
        }
        
        function handleHashChange() {
            const hash = window.location.hash.substring(1);
            if (hash && ['overview', 'api', 'info', 'upgrade'].includes(hash) && hash !== currentSection) {
                showSection(hash);
            }
        }
        
        // ===== WINDOW EXPORTS =====
        window.toggleSidebar = toggleSidebar;
        window.showSection = showSection;
        window.toggleApiKey = toggleApiKey;
        window.copyApiKey = copyApiKey;
        window.handleLogout = handleLogout;
        window.refreshActivity = refreshActivity;
        window.closeSidebar = closeSidebar;
        
        console.log('âœ… Dashboard ready');
    </script>
</body>

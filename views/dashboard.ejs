                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 stats-grid">
                    <!-- Global Stats -->
                    <div class="card stats-card p-5 animate-fade-in" data-aos="fade-up">
                        <div class="flex items-start justify-between mb-4">
                            <div class="p-3 rounded-xl bg-purple-50">
                                <i class="fas fa-globe text-purple-600 text-xl"></i>
                            </div>
                            <span class="text-xs font-semibold text-purple-600 bg-purple-50 px-2 py-1 rounded-full">GLOBAL</span>
                        </div>
                        <p class="text-2xl sm:text-3xl font-bold text-gray-900 mb-1" id="totalRequestsAll">
                            <%= totalRequestsAllUsers.toLocaleString() %>
                        </p>
                        <p class="text-sm text-gray-500">Total requests across all users</p>
                    </div>

                    <!-- Personal Stats -->
                    <div class="card stats-card p-5 animate-fade-in" data-aos="fade-up" data-aos-delay="100">
                        <div class="flex items-start justify-between mb-4">
                            <div class="p-3 rounded-xl bg-blue-50">
                                <i class="fas fa-chart-line text-blue-600 text-xl"></i>
                            </div>
                            <span class="text-xs font-semibold text-blue-600 bg-blue-50 px-2 py-1 rounded-full">PERSONAL</span>
                        </div>
                        <p class="text-2xl sm:text-3xl font-bold text-gray-900 mb-1">
                            <%= user.total_requests.toLocaleString() %>
                        </p>
                        <p class="text-sm text-gray-500">Your lifetime requests</p>
                    </div>

                    <!-- Usage Stats -->
                    <div class="card stats-card p-5 animate-fade-in" data-aos="fade-up" data-aos-delay="200">
                        <div class="flex items-start justify-between mb-4">
                            <div class="p-3 rounded-xl bg-green-50">
                                <i class="fas fa-calendar-day text-green-600 text-xl"></i>
                            </div>
                            <span class="text-xs font-semibold text-green-600 bg-green-50 px-2 py-1 rounded-full">TODAY</span>
                        </div>
                        <div class="mb-4">
                            <p class="text-2xl sm:text-3xl font-bold text-gray-900 mb-1">
                                <%= user.requests_used_today %>/<%= user.daily_limit %>
                            </p>
                            <p class="text-sm text-gray-500">Daily usage</p>
                        </div>
                        <div>
                            <div class="flex justify-between text-sm text-gray-600 mb-2">
                                <span>Usage</span>
                                <span class="font-bold"><%= Math.round((user.requests_used_today / user.daily_limit) * 100) %>%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: <%= Math.min((user.requests_used_today / user.daily_limit) * 100, 100) %>%"></div>
                            </div>
                        </div>
                    </div>


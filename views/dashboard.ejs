    <script>
        // ==================== INITIALIZATION ====================
        document.addEventListener('DOMContentLoaded', function() {
            console.log(' WhatsGate Dashboard Initializing...');
            
            // Hide loading screen with delay
            setTimeout(() => {
                document.getElementById('loading').style.opacity = '0';
                setTimeout(() => {
                    document.getElementById('loading').style.display = 'none';
                    console.log(' Dashboard loaded successfully');
                }, 300);
            }, 800);
            
            // Initialize dashboard
            initializeDashboard();
        });
        
        function initializeDashboard() {
            // Setup event listeners
            setupEventListeners();
            
            // Check URL hash for section
            const hash = window.location.hash.substring(1) || 'overview';
            showSection(hash);
            
            // Start auto-updates
            startAutoUpdates();
        }
        
        function setupEventListeners() {
            // API Key toggle
            document.getElementById('toggleApiKeyButton')?.addEventListener('click', toggleApiKey);
            
            // API Key copy
            document.getElementById('copyApiKeyButton')?.addEventListener('click', copyApiKey);
            
            // Navigation
            document.querySelectorAll('a[href^="#"]').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const section = this.getAttribute('href').substring(1);
                    showSection(section);
                });
            });
            
            // Window resize
            window.addEventListener('resize', handleResize);
            
            // Keyboard shortcuts
            document.addEventListener('keydown', handleKeyboardShortcuts);
            
            console.log(' Event listeners initialized');
        }
        
        // ==================== SIDEBAR FUNCTIONS ====================
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobileOverlay');
            
            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
            
            // Toggle body scroll
            if (sidebar.classList.contains('active')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = '';
            }
        }
        
        function closeSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobileOverlay');
            
            sidebar.classList.remove('active');
            overlay.classList.remove('active');
            document.body.style.overflow = '';
        }
        
        // ==================== SECTION MANAGEMENT ====================
        function showSection(section) {
            // Hide all sections
            document.querySelectorAll('main > section').forEach(sec => {
                sec.classList.add('hidden');
            });
            
            // Show selected section
            const targetSection = document.getElementById(section + '-section');
            if (targetSection) {
                targetSection.classList.remove('hidden');
                
                // Update URL
                history.replaceState(null, null, '#' + section);
                
                // Update active navigation
                updateActiveNav(section);
                
                // Animate entrance
                targetSection.style.animation = 'fadeIn 0.5s ease-in-out';
            }
            
            // Close sidebar on mobile
            if (window.innerWidth < 768) {
                closeSidebar();
            }
        }
        
        function updateActiveNav(section) {
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
                const href = link.getAttribute('href');
                if (href === '#' + section) {
                    link.classList.add('active');
                }
            });
        }
        
        // ==================== API KEY FUNCTIONS ====================
        let isApiKeyVisible = false;
        
        function toggleApiKey() {
            const input = document.getElementById('apiKeyInput');
            const eyeIcon = document.getElementById('eyeIcon');
            const eyeText = document.getElementById('eyeText');
            
            isApiKeyVisible = !isApiKeyVisible;
            input.type = isApiKeyVisible ? 'text' : 'password';
            
            if (eyeIcon) {
                eyeIcon.className = isApiKeyVisible ? 'fas fa-eye-slash mr-2' : 'fas fa-eye mr-2';
            }
            
            if (eyeText) {
                eyeText.textContent = isApiKeyVisible ? 'Hide' : 'Show';
            }
            
            // Auto-hide after 15 seconds
            if (isApiKeyVisible) {
                setTimeout(() => {
                    if (isApiKeyVisible) {
                        toggleApiKey();
                    }
                }, 15000);
            }
        }
        
        async function copyApiKey() {
            const input = document.getElementById('apiKeyInput');
            
            try {
                await navigator.clipboard.writeText(input.value);
                showToast('API Key copied to clipboard!', 'success');
                
                // Button feedback
                const btn = document.getElementById('copyApiKeyButton');
                const originalHTML = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check mr-2"></i>Copied!';
                btn.classList.add('bg-green-100', 'text-green-700');
                
                setTimeout(() => {
                    btn.innerHTML = originalHTML;
                    btn.classList.remove('bg-green-100', 'text-green-700');
                }, 2000);
                
            } catch (err) {
                console.error('Copy failed:', err);
                showToast('Failed to copy. Please copy manually.', 'error');
            }
        }
        
        // ==================== TOAST NOTIFICATION ====================
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const toastIcon = document.getElementById('toastIcon');
            const toastMessage = document.getElementById('toastMessage');
            
            // Set content
            toastMessage.textContent = message;
            
            // Set icon
            const icons = {
                success: 'fa-check-circle text-green-400',
                error: 'fa-exclamation-circle text-red-400',
                warning: 'fa-exclamation-triangle text-yellow-400',
                info: 'fa-info-circle text-blue-400'
            };
            
            toastIcon.className = `fas ${icons[type] || icons.info}`;
            
            // Show toast
            toast.classList.remove('translate-y-[-100px]');
            toast.classList.add('translate-y-0');
            
            // Auto hide
            setTimeout(hideToast, 4000);
        }
        
        function hideToast() {
            const toast = document.getElementById('toast');
            toast.classList.add('translate-y-[-100px]');
            toast.classList.remove('translate-y-0');
        }
        
        // ==================== UTILITY FUNCTIONS ====================
        function handleResize() {
            if (window.innerWidth >= 768) {
                closeSidebar();
            }
        }
        
        function handleKeyboardShortcuts(e) {
            // Ctrl/Cmd + S to show stats
            if ((e.ctrlKey || e.metaKey) && e.key === 's') {
                e.preventDefault();
                showSection('overview');
            }
            
            // Ctrl/Cmd + D to show docs
            if ((e.ctrlKey || e.metaKey) && e.key === 'd') {
                e.preventDefault();
                showSection('api');
            }
            
            // Escape to close sidebar
            if (e.key === 'Escape') {
                closeSidebar();
            }
        }
        
        function startAutoUpdates() {
            // Update stats every 30 seconds
            setInterval(updateStats, 30000);
        }
        
        async function updateStats() {
            try {
                const response = await fetch('/api/stats');
                if (response.ok) {
                    const data = await response.json();
                    if (data.success) {
                        const totalEl = document.getElementById('totalRequestsAll');
                        if (totalEl) {
                            totalEl.textContent = data.data.global.total_requests.toLocaleString();
                        }
                    }
                }
            } catch (error) {
                console.warn('Stats update failed:', error);
            }
        }
        
        async function testApi() {
            showToast('Testing API connection...', 'info');
            
            try {
                const response = await fetch('/api/test', {
                    headers: {
                        'x-api-key': '<%= user.api_key %>'
                    }
                });
                
                if (response.ok) {
                    showToast('API connection successful!', 'success');
                } else {
                    showToast('API test failed', 'error');
                }
            } catch (error) {
                showToast('Connection error: ' + error.message, 'error');
            }
        }
        
        async function handleLogout() {
            if (!confirm('Are you sure you want to logout?')) return;
            
            try {
                document.getElementById('loading').style.display = 'flex';
                document.getElementById('loading').style.opacity = '1';
                
                const response = await fetch('/auth/logout', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                
                if (response.ok) {
                    window.location.href = '/login';
                } else {
                    throw new Error('Logout failed');
                }
            } catch (error) {
                console.error('Logout error:', error);
                showToast('Logout failed. Please try again.', 'error');
                document.getElementById('loading').style.display = 'none';
            }
        }
        
        // ==================== GLOBAL EXPORTS ====================
        window.toggleSidebar = toggleSidebar;
        window.closeSidebar = closeSidebar;
        window.showSection = showSection;
        window.toggleApiKey = toggleApiKey;
        window.copyApiKey = copyApiKey;
        window.handleLogout = handleLogout;
        window.testApi = testApi;
        window.hideToast = hideToast;
        
        console.log(' Dashboard ready');
    </script>

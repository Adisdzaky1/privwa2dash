<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | WhatsGate API</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f5f3ff',
                            100: '#ede9fe',
                            200: '#ddd6fe',
                            300: '#c4b5fd',
                            400: '#a78bfa',
                            500: '#8b5cf6',
                            600: '#7c3aed',
                            700: '#6d28d9',
                            800: '#5b21b6',
                            900: '#4c1d95',
                        }
                    },
                    fontFamily: {
                        'inter': ['Inter', 'sans-serif']
                    }
                }
            }
        }
    </script>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <style>
        * {
            font-family: 'Inter', sans-serif;
        }
        
        .loading-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: white;
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: opacity 0.3s ease;
        }
        
        .loading-hidden {
            opacity: 0;
            pointer-events: none;
        }
        
        .sidebar {
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }
        
        .sidebar-open {
            transform: translateX(0);
        }
        
        @media (min-width: 768px) {
            .sidebar {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 16rem;
            }
        }
        
        .nav-item.active {
            background: rgba(139, 92, 246, 0.1);
            border-left: 3px solid #8b5cf6;
        }
        
        .stats-card {
            transition: all 0.3s ease;
        }
        
        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Simple Loading Screen -->
    <div id="loading" class="loading-screen">
        <div class="text-center">
            <div class="w-16 h-16 border-4 border-primary-500 border-t-transparent rounded-full animate-spin mx-auto mb-4"></div>
            <p class="text-gray-700 font-medium">Loading dashboard...</p>
        </div>
    </div>

    <!-- Mobile Sidebar Overlay -->
    <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden" onclick="closeSidebar()"></div>

    <!-- Sidebar -->
    <aside id="sidebar" class="sidebar fixed top-0 left-0 h-full w-64 bg-gray-900 text-white z-50">
        <!-- Logo -->
        <div class="p-6 border-b border-gray-800">
            <div class="flex items-center">
                <div class="w-10 h-10 rounded-lg bg-primary-600 flex items-center justify-center mr-3">
                    <i class="fas fa-comments text-white"></i>
                </div>
                <div>
                    <h1 class="text-xl font-bold">WhatsGate</h1>
                    <p class="text-xs text-gray-400">API Dashboard</p>
                </div>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="p-4 space-y-2">
            <a href="#overview" class="nav-item active flex items-center px-4 py-3 rounded-lg text-gray-200 hover:bg-gray-800">
                <i class="fas fa-chart-pie w-5 mr-3"></i>
                <div>
                    <span class="font-medium">Overview</span>
                    <p class="text-xs text-gray-400">Dashboard statistics</p>
                </div>
            </a>
            
            <a href="#api" class="nav-item flex items-center px-4 py-3 rounded-lg text-gray-200 hover:bg-gray-800">
                <i class="fas fa-code w-5 mr-3"></i>
                <div>
                    <span class="font-medium">API Docs</span>
                    <p class="text-xs text-gray-400">Integration guide</p>
                </div>
            </a>
            
            <a href="#info" class="nav-item flex items-center px-4 py-3 rounded-lg text-gray-200 hover:bg-gray-800">
                <i class="fas fa-info-circle w-5 mr-3"></i>
                <div>
                    <span class="font-medium">Information</span>
                    <p class="text-xs text-gray-400">Updates & news</p>
                </div>
            </a>
            
            <a href="#upgrade" class="nav-item flex items-center px-4 py-3 rounded-lg text-gray-200 hover:bg-gray-800">
                <i class="fas fa-rocket w-5 mr-3"></i>
                <div>
                    <span class="font-medium">Upgrade Plan</span>
                    <p class="text-xs text-gray-400">Boost your limits</p>
                </div>
            </a>
            
            <% if (user.role === 'admin') { %>
            <a href="/admin" class="nav-item flex items-center px-4 py-3 rounded-lg text-gray-200 hover:bg-gray-800">
                <i class="fas fa-shield-alt w-5 mr-3"></i>
                <div>
                    <span class="font-medium">Admin Panel</span>
                    <p class="text-xs text-gray-400">System management</p>
                </div>
            </a>
            <% } %>
        </nav>

        <!-- User Profile -->
        <div class="p-4 border-t border-gray-800 mt-auto">
            <div class="flex items-center mb-4">
                <div class="w-10 h-10 rounded-full bg-primary-600 flex items-center justify-center text-white font-bold mr-3">
                    <%= user.username.charAt(0).toUpperCase() %>
                </div>
                <div>
                    <p class="font-medium"><%= user.username %></p>
                    <span class="text-xs bg-primary-900 text-primary-300 px-2 py-1 rounded">
                        <%= user.plan.toUpperCase() %> PLAN
                    </span>
                </div>
            </div>
            
            <button onclick="logout()" class="w-full bg-red-600 hover:bg-red-700 text-white py-2 rounded-lg font-medium">
                <i class="fas fa-sign-out-alt mr-2"></i>Logout
            </button>
        </div>
    </aside>

    <!-- Main Content -->
    <div id="mainContent" class="main-content">
        <!-- Header -->
        <header class="bg-white border-b shadow-sm">
            <div class="px-4 sm:px-6 py-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <button onclick="toggleSidebar()" class="md:hidden text-gray-700 mr-4">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                        <div>
                            <h1 class="text-xl font-bold text-gray-900">Dashboard</h1>
                            <p class="text-sm text-gray-600">Welcome, <%= user.username %></p>
                        </div>
                    </div>
                    
                    <div class="flex items-center space-x-2">
                        <div class="bg-primary-500 text-white px-4 py-2 rounded-lg font-medium">
                            <i class="fas fa-fire mr-2"></i>
                            <%= user.requests_used_today %>/<%= user.daily_limit %>
                        </div>
                        <a href="https://t.me/yourtelegram" target="_blank" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg font-medium">
                            <i class="fab fa-telegram-plane mr-2"></i>Support
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Content -->
        <main class="p-4 sm:p-6">
            <!-- Overview Section (Default Visible) -->
            <section id="overview-section" class="space-y-6">
                <!-- Stats Grid -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                    <div class="stats-card bg-white p-6 rounded-xl shadow">
                        <div class="flex items-center mb-4">
                            <div class="p-3 rounded-lg bg-primary-50 mr-4">
                                <i class="fas fa-globe text-primary-600"></i>
                            </div>
                            <div>
                                <p class="text-2xl font-bold text-gray-900"><%= totalRequestsAllUsers.toLocaleString() %></p>
                                <p class="text-sm text-gray-500">Total requests</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="stats-card bg-white p-6 rounded-xl shadow">
                        <div class="flex items-center mb-4">
                            <div class="p-3 rounded-lg bg-blue-50 mr-4">
                                <i class="fas fa-chart-bar text-blue-600"></i>
                            </div>
                            <div>
                                <p class="text-2xl font-bold text-gray-900"><%= user.total_requests.toLocaleString() %></p>
                                <p class="text-sm text-gray-500">Your requests</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="stats-card bg-white p-6 rounded-xl shadow">
                        <div class="flex items-center mb-4">
                            <div class="p-3 rounded-lg bg-green-50 mr-4">
                                <i class="fas fa-calendar-day text-green-600"></i>
                            </div>
                            <div>
                                <p class="text-2xl font-bold text-gray-900"><%= user.requests_used_today %>/<%= user.daily_limit %></p>
                                <p class="text-sm text-gray-500">Today's usage</p>
                            </div>
                        </div>
                        <div class="mt-4">
                            <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                                <div class="h-full bg-green-500 rounded-full" style="width: <%= (user.requests_used_today / user.daily_limit * 100) %>%"></div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="stats-card bg-white p-6 rounded-xl shadow">
                        <div class="flex items-center mb-4">
                            <div class="p-3 rounded-lg bg-yellow-50 mr-4">
                                <i class="fas fa-crown text-yellow-600"></i>
                            </div>
                            <div>
                                <p class="text-2xl font-bold text-gray-900 uppercase"><%= user.plan %></p>
                                <p class="text-sm text-gray-500">Current plan</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- API Key Section -->
                <div class="bg-gradient-to-r from-primary-600 to-primary-700 text-white p-6 rounded-xl">
                    <div class="mb-4">
                        <h3 class="text-xl font-bold mb-2">Your API Key</h3>
                        <p class="text-primary-100">Keep this key secret</p>
                    </div>
                    
                    <div class="relative mb-4">
                        <input type="password" 
                               id="apiKey" 
                               value="<%= user.api_key %>" 
                               readonly
                               class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white font-mono">
                        <button onclick="toggleApiKey()" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-white">
                            <i id="eyeIcon" class="fas fa-eye"></i>
                        </button>
                    </div>
                    
                    <div class="flex space-x-2">
                        <button onclick="copyApiKey()" class="bg-white text-primary-700 px-4 py-2 rounded-lg font-medium hover:bg-gray-100">
                            <i class="fas fa-copy mr-2"></i>Copy Key
                        </button>
                        <button onclick="toggleApiKey()" class="bg-white/10 hover:bg-white/20 text-white px-4 py-2 rounded-lg font-medium">
                            <span id="toggleText">Show Key</span>
                        </button>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="bg-white rounded-xl shadow overflow-hidden">
                    <div class="px-6 py-4 border-b">
                        <h3 class="text-lg font-bold text-gray-900">Recent Activity</h3>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Endpoint</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Method</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Time</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                <% if (recentLogs.length === 0) { %>
                                <tr>
                                    <td colspan="4" class="px-6 py-8 text-center text-gray-500">
                                        No activity yet
                                    </td>
                                </tr>
                                <% } else { %>
                                    <% recentLogs.forEach(log => { %>
                                    <tr>
                                        <td class="px-6 py-4 text-sm font-mono"><%= log.endpoint %></td>
                                        <td class="px-6 py-4">
                                            <span class="px-2 py-1 text-xs rounded <%= log.method === 'GET' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>">
                                                <%= log.method %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-gray-500">
                                            <%= new Date(log.created_at).toLocaleTimeString() %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded">Success</span>
                                        </td>
                                    </tr>
                                    <% }); %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

            <!-- API Docs Section (Hidden by default) -->
            <section id="api-section" class="space-y-6 hidden">
                <div class="bg-white p-6 rounded-xl shadow">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">API Documentation</h2>
                    <!-- API docs content -->
                </div>
            </section>

            <!-- Info Section (Hidden by default) -->
            <section id="info-section" class="space-y-6 hidden">
                <div class="bg-white p-6 rounded-xl shadow">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">Information</h2>
                    <!-- Info content -->
                </div>
            </section>

            <!-- Upgrade Section (Hidden by default) -->
            <section id="upgrade-section" class="space-y-6 hidden">
                <div class="bg-white p-6 rounded-xl shadow">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">Upgrade Plan</h2>
                    <!-- Upgrade content -->
                </div>
            </section>
        </main>
    </div>

    <script>
        // Simple initialization without complex error handling
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Dashboard loaded');
            
            // Hide loading screen immediately
            setTimeout(function() {
                document.getElementById('loading').classList.add('loading-hidden');
                
                // Remove loading screen from DOM after animation
                setTimeout(function() {
                    document.getElementById('loading').style.display = 'none';
                }, 300);
            }, 500);
            
            // Initialize navigation
            initNavigation();
            
            // Setup API key functionality
            initApiKey();
        });
        
        function initNavigation() {
            // Get current hash from URL
            const hash = window.location.hash.substring(1) || 'overview';
            showSection(hash);
            
            // Set up navigation links
            document.querySelectorAll('a[href^="#"]').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const section = this.getAttribute('href').substring(1);
                    showSection(section);
                });
            });
            
            // Handle hash changes
            window.addEventListener('hashchange', function() {
                const hash = window.location.hash.substring(1) || 'overview';
                showSection(hash);
            });
        }
        
        function showSection(section) {
            // Hide all sections
            document.querySelectorAll('main > section').forEach(sec => {
                sec.classList.add('hidden');
            });
            
            // Show selected section
            const target = document.getElementById(section + '-section');
            if (target) {
                target.classList.remove('hidden');
            }
            
            // Update active nav
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
                if (item.getAttribute('href') === '#' + section) {
                    item.classList.add('active');
                }
            });
            
            // Close sidebar on mobile
            if (window.innerWidth < 768) {
                closeSidebar();
            }
        }
        
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            
            sidebar.classList.toggle('sidebar-open');
            overlay.classList.toggle('hidden');
        }
        
        function closeSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            
            sidebar.classList.remove('sidebar-open');
            overlay.classList.add('hidden');
        }
        
        // API Key Functions
        function initApiKey() {
            window.isApiKeyVisible = false;
        }
        
        function toggleApiKey() {
            const input = document.getElementById('apiKey');
            const eyeIcon = document.getElementById('eyeIcon');
            const toggleText = document.getElementById('toggleText');
            
            window.isApiKeyVisible = !window.isApiKeyVisible;
            input.type = window.isApiKeyVisible ? 'text' : 'password';
            eyeIcon.className = window.isApiKeyVisible ? 'fas fa-eye-slash' : 'fas fa-eye';
            toggleText.textContent = window.isApiKeyVisible ? 'Hide Key' : 'Show Key';
        }
        
        function copyApiKey() {
            const input = document.getElementById('apiKey');
            
            input.select();
            input.setSelectionRange(0, 99999);
            
            try {
                navigator.clipboard.writeText(input.value);
                alert('API key copied to clipboard!');
            } catch (err) {
                // Fallback for older browsers
                document.execCommand('copy');
                alert('API key copied!');
            }
        }
        
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                window.location.href = '/auth/logout';
            }
        }
        
        // Expose functions to global scope for inline onclick handlers
        window.toggleSidebar = toggleSidebar;
        window.closeSidebar = closeSidebar;
        window.toggleApiKey = toggleApiKey;
        window.copyApiKey = copyApiKey;
        window.logout = logout;
    </script>
</body>
</html>

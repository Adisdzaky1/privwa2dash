<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title><%= title %></title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            important: true,
            theme: {
                screens: {
                    'xs': '375px',
                    'sm': '640px',
                    'md': '768px',
                    'lg': '1024px',
                    'xl': '1280px',
                    '2xl': '1536px',
                },
                extend: {
                    colors: {
                        primary: {
                            50: '#f5f3ff',
                            100: '#ede9fe',
                            200: '#ddd6fe',
                            300: '#c4b5fd',
                            400: '#a78bfa',
                            500: '#8b5cf6',
                            600: '#7c3aed',
                            700: '#6d28d9',
                            800: '#5b21b6',
                            900: '#4c1d95',
                        }
                    }
                }
            }
        }
    </script>
    
    <!-- Google Fonts & FontAwesome -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <style>
        /* Keep your existing styles, just fix the bottom nav */
        .bottom-nav {
            display: flex;
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: white;
            box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
            z-index: 100;
            padding: 0.5rem;
            border-top: 1px solid #e5e7eb;
        }
        
        .bottom-nav-item {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 0.75rem 0.5rem;
            border-radius: 0.75rem;
            color: #6b7280;
            transition: all 0.2s ease;
            font-size: 0.75rem;
            min-height: 64px;
            cursor: pointer;
        }
        
        .bottom-nav-item.active {
            color: #7c3aed;
            background: rgba(124, 58, 237, 0.1);
        }
        
        .bottom-nav-item i {
            font-size: 1.25rem;
            margin-bottom: 0.25rem;
        }
        
        @media (min-width: 768px) {
            .bottom-nav {
                display: none;
            }
        }
        
        /* Other existing styles remain the same */
    </style>
</head>
<body class="h-full bg-gray-50 font-['Inter']">
    <!-- Loading Overlay -->
    <div id="loadingOverlay" class="fixed inset-0 bg-white z-50 flex items-center justify-center hidden">
        <div class="text-center">
            <div class="w-16 h-16 border-4 border-purple-600 border-t-transparent rounded-full animate-spin mx-auto mb-4"></div>
            <p class="text-gray-600 font-medium">Loading dashboard...</p>
        </div>
    </div>
    
    <!-- Mobile Overlay -->
    <div id="mobileOverlay" class="fixed inset-0 bg-black/50 z-40 hidden" onclick="closeSidebar()"></div>
    
    <!-- Toast Notification -->
    <div id="toast" class="fixed top-4 right-4 z-50 hidden">
        <div class="bg-gray-900 text-white px-6 py-4 rounded-xl shadow-xl">
            <div class="flex items-center space-x-3">
                <i id="toastIcon" class="fas fa-check-circle text-green-400"></i>
                <div>
                    <p id="toastMessage" class="font-medium">Notification</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="flex min-h-screen">
        <!-- Sidebar (Desktop) -->
        <div id="sidebar" class="hidden md:flex flex-col w-64 bg-gray-900 text-white">
            <!-- Sidebar content remains the same -->
            <div class="p-6 border-b border-gray-800">
                <div class="flex items-center">
                    <div class="w-10 h-10 rounded-xl bg-purple-600 flex items-center justify-center mr-3">
                        <i class="fas fa-comments text-white"></i>
                    </div>
                    <div>
                        <h1 class="text-xl font-bold">WhatsGate</h1>
                        <p class="text-xs text-gray-400">API Dashboard</p>
                    </div>
                </div>
            </div>
            
            <nav class="flex-1 p-4 space-y-1">
                <div onclick="showSection('overview')" class="nav-item active flex items-center px-4 py-3 rounded-xl hover:bg-white/5 cursor-pointer">
                    <i class="fas fa-chart-pie w-5 mr-3"></i>
                    <span>Overview</span>
                </div>
                
                <div onclick="showSection('api')" class="nav-item flex items-center px-4 py-3 rounded-xl hover:bg-white/5 cursor-pointer">
                    <i class="fas fa-code w-5 mr-3"></i>
                    <span>API Documentation</span>
                </div>
                
                <div onclick="showSection('info')" class="nav-item flex items-center px-4 py-3 rounded-xl hover:bg-white/5 cursor-pointer">
                    <i class="fas fa-info-circle w-5 mr-3"></i>
                    <span>Information</span>
                </div>
                
                <div onclick="showSection('upgrade')" class="nav-item flex items-center px-4 py-3 rounded-xl hover:bg-white/5 cursor-pointer">
                    <i class="fas fa-rocket w-5 mr-3"></i>
                    <span>Upgrade Plan</span>
                </div>
            </nav>
            
            <!-- User profile and logout -->
            <div class="p-4 border-t border-gray-800">
                <div class="flex items-center mb-4">
                    <div class="w-10 h-10 rounded-full bg-purple-500 flex items-center justify-center text-white font-bold">
                        <%= user.username.charAt(0).toUpperCase() %>
                    </div>
                    <div class="ml-3">
                        <p class="font-medium"><%= user.username %></p>
                        <p class="text-xs text-gray-400"><%= user.plan.toUpperCase() %> Plan</p>
                    </div>
                </div>
                <button onclick="handleLogout()" class="w-full py-2.5 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium">
                    <i class="fas fa-sign-out-alt mr-2"></i> Logout
                </button>
            </div>
        </div>
        
        <!-- Mobile Sidebar -->
        <div id="mobileSidebar" class="fixed inset-y-0 left-0 z-50 w-64 bg-gray-900 text-white transform -translate-x-full transition-transform md:hidden">
            <!-- Same content as desktop sidebar -->
        </div>
        
        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Header -->
            <header class="bg-white border-b">
                <div class="px-4 py-3 flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <button onclick="toggleSidebar()" class="md:hidden text-gray-700 p-2">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                        <h1 class="text-xl font-bold text-gray-900">Dashboard</h1>
                    </div>
                    <a href="https://t.me/yourtelegram" target="_blank" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
                        <i class="fab fa-telegram-plane mr-2"></i>
                        <span class="hidden sm:inline">Support</span>
                        <span class="sm:hidden">Help</span>
                    </a>
                </div>
            </header>
            
            <!-- Main Content -->
            <main class="flex-1 p-4 md:p-6 overflow-y-auto pb-20 md:pb-6">
                <!-- Overview Section -->
                <section id="overview-section" class="space-y-6">
                    <!-- Stats Cards -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                        <!-- Card 1 -->
                        <div class="bg-white p-6 rounded-xl shadow-sm border">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-gray-600 text-sm">Total Requests</span>
                                <i class="fas fa-globe text-purple-600"></i>
                            </div>
                            <p class="text-3xl font-bold text-gray-900" id="totalRequestsAll">
                                <%= totalRequestsAllUsers.toLocaleString() %>
                            </p>
                        </div>
                        
                        <!-- Card 2 -->
                        <div class="bg-white p-6 rounded-xl shadow-sm border">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-gray-600 text-sm">Your Requests</span>
                                <i class="fas fa-chart-bar text-blue-600"></i>
                            </div>
                            <p class="text-3xl font-bold text-gray-900">
                                <%= user.total_requests.toLocaleString() %>
                            </p>
                        </div>
                        
                        <!-- Card 3 -->
                        <div class="bg-white p-6 rounded-xl shadow-sm border">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-gray-600 text-sm">Today's Usage</span>
                                <i class="fas fa-calendar-day text-green-600"></i>
                            </div>
                            <p class="text-3xl font-bold text-gray-900">
                                <%= user.requests_used_today %>/<%= user.daily_limit %>
                            </p>
                            <div class="mt-2 bg-gray-200 rounded-full h-2">
                                <div class="bg-green-600 h-2 rounded-full" style="width: <%= (user.requests_used_today / user.daily_limit * 100) %>%"></div>
                            </div>
                        </div>
                        
                        <!-- Card 4 -->
                        <div class="bg-white p-6 rounded-xl shadow-sm border">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-gray-600 text-sm">Current Plan</span>
                                <i class="fas fa-crown text-yellow-600"></i>
                            </div>
                            <p class="text-3xl font-bold text-gray-900 uppercase"><%= user.plan %></p>
                        </div>
                    </div>
                    
                    <!-- API Key Card -->
                    <div class="bg-gradient-to-r from-purple-600 to-purple-700 p-6 rounded-xl text-white">
                        <div class="flex flex-col md:flex-row md:items-center justify-between mb-4 gap-4">
                            <div>
                                <h3 class="font-bold text-lg mb-1">Your API Key</h3>
                                <p class="text-purple-200 text-sm">Keep this secret</p>
                            </div>
                            <div class="flex space-x-2">
                                <button id="toggleApiKeyBtn" class="px-4 py-2 bg-white/10 hover:bg-white/20 rounded-lg">
                                    <i id="eyeIcon" class="fas fa-eye mr-2"></i>
                                    <span id="eyeText">Show</span>
                                </button>
                                <button id="copyApiKeyBtn" class="px-4 py-2 bg-white text-purple-700 rounded-lg font-medium">
                                    <i class="fas fa-copy mr-2"></i>
                                    Copy
                                </button>
                            </div>
                        </div>
                        <input type="password" id="apiKeyInput" value="<%= user.api_key %>" readonly 
                               class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg font-mono text-sm">
                    </div>
                    
                    <!-- Recent Activity -->
                    <div class="bg-white rounded-xl shadow-sm border">
                        <div class="p-6 border-b">
                            <h3 class="font-bold text-gray-900 text-lg">Recent Activity</h3>
                        </div>
                        <div class="p-6">
                            <% if (recentLogs.length === 0) { %>
                            <div class="text-center py-8">
                                <p class="text-gray-500">No activity yet</p>
                            </div>
                            <% } else { %>
                            <div class="space-y-4">
                                <% recentLogs.forEach(log => { %>
                                <div class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg">
                                    <div class="font-mono text-sm"><%= log.endpoint %></div>
                                    <div class="flex items-center space-x-4">
                                        <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-xs">
                                            <%= log.method %>
                                        </span>
                                        <span class="text-gray-500 text-sm">
                                            <%= new Date(log.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                                        </span>
                                    </div>
                                </div>
                                <% }); %>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </section>
                
                <!-- API Documentation Section -->
                <section id="api-section" class="hidden space-y-6">
                    <div class="bg-white p-6 rounded-xl shadow-sm border">
                        <h2 class="text-2xl font-bold text-gray-900 mb-4">API Documentation</h2>
                        <!-- API docs content -->
                    </div>
                </section>
                
                <!-- Information Section -->
                <section id="info-section" class="hidden space-y-6">
                    <div class="bg-white p-6 rounded-xl shadow-sm border">
                        <h2 class="text-2xl font-bold text-gray-900 mb-4">Information</h2>
                        <!-- Info content -->
                    </div>
                </section>
                
                <!-- Upgrade Section -->
                <section id="upgrade-section" class="hidden space-y-6">
                    <div class="bg-white p-6 rounded-xl shadow-sm border">
                        <h2 class="text-2xl font-bold text-gray-900 mb-4">Upgrade Plan</h2>
                        <!-- Upgrade content -->
                    </div>
                </section>
            </main>
            
            <!-- ===== BOTTOM NAVIGATION (MOBILE ONLY) - FIXED ===== -->
            <nav class="bottom-nav md:hidden">
                <div onclick="showSection('overview')" id="bottom-nav-overview" class="bottom-nav-item">
                    <i class="fas fa-chart-pie"></i>
                    <span>Overview</span>
                </div>
                
                <div onclick="showSection('api')" id="bottom-nav-api" class="bottom-nav-item">
                    <i class="fas fa-code"></i>
                    <span>API</span>
                </div>
                
                <div onclick="showSection('info')" id="bottom-nav-info" class="bottom-nav-item">
                    <i class="fas fa-info-circle"></i>
                    <span>Info</span>
                </div>
                
                <div onclick="showSection('upgrade')" id="bottom-nav-upgrade" class="bottom-nav-item">
                    <i class="fas fa-rocket"></i>
                    <span>Upgrade</span>
                </div>
                
                <div onclick="toggleSidebar()" class="bottom-nav-item">
                    <i class="fas fa-bars"></i>
                    <span>Menu</span>
                </div>
            </nav>
        </div>
    </div>
    
    <script>
        // ===== GLOBAL VARIABLES =====
        let currentSection = 'overview';
        let isApiKeyVisible = false;
        
        // ===== INITIALIZATION =====
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Dashboard loaded');
            
            // Check URL hash for section
            const hash = window.location.hash.substring(1);
            if (hash && ['overview', 'api', 'info', 'upgrade'].includes(hash)) {
                currentSection = hash;
            }
            
            // Show the initial section
            showSection(currentSection);
            
            // Setup event listeners
            setupEventListeners();
            
            // Hide loading
            setTimeout(() => {
                document.getElementById('loadingOverlay').style.display = 'none';
            }, 500);
        });
        
        // ===== EVENT LISTENERS =====
        function setupEventListeners() {
            // API Key buttons
            document.getElementById('toggleApiKeyBtn').addEventListener('click', toggleApiKey);
            document.getElementById('copyApiKeyBtn').addEventListener('click', copyApiKey);
            
            // Sidebar toggle
            document.querySelectorAll('[onclick*="toggleSidebar"]').forEach(btn => {
                btn.addEventListener('click', toggleSidebar);
            });
            
            // Navigation items
            document.querySelectorAll('.nav-item').forEach(item => {
                item.addEventListener('click', function() {
                    const section = this.getAttribute('onclick').match(/'([^']+)'/)[1];
                    showSection(section);
                });
            });
            
            // Bottom nav items
            document.querySelectorAll('.bottom-nav-item').forEach(item => {
                item.addEventListener('click', function() {
                    const section = this.getAttribute('onclick').match(/'([^']+)'/)[1];
                    if (section) showSection(section);
                });
            });
        }
        
        // ===== SIDEBAR FUNCTIONS =====
        function toggleSidebar() {
            const mobileSidebar = document.getElementById('mobileSidebar');
            const overlay = document.getElementById('mobileOverlay');
            
            if (mobileSidebar.classList.contains('-translate-x-full')) {
                mobileSidebar.classList.remove('-translate-x-full');
                overlay.classList.remove('hidden');
            } else {
                mobileSidebar.classList.add('-translate-x-full');
                overlay.classList.add('hidden');
            }
        }
        
        function closeSidebar() {
            document.getElementById('mobileSidebar').classList.add('-translate-x-full');
            document.getElementById('mobileOverlay').classList.add('hidden');
        }
        
        // ===== SECTION NAVIGATION =====
        function showSection(section) {
            console.log('Showing section:', section);
            
            // Hide all sections
            document.querySelectorAll('main > section').forEach(sec => {
                sec.classList.add('hidden');
            });
            
            // Show selected section
            const targetSection = document.getElementById(section + '-section');
            if (targetSection) {
                targetSection.classList.remove('hidden');
                currentSection = section;
                
                // Update URL hash
                history.replaceState(null, null, '#' + section);
                
                // Update active navigation
                updateActiveNav(section);
                
                // Close sidebar on mobile
                if (window.innerWidth < 768) {
                    closeSidebar();
                }
            }
        }
        
        function updateActiveNav(section) {
            // Update desktop sidebar
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active', 'bg-white/10');
                if (item.getAttribute('onclick') && item.getAttribute('onclick').includes(section)) {
                    item.classList.add('active', 'bg-white/10');
                }
            });
            
            // Update bottom nav
            document.querySelectorAll('.bottom-nav-item').forEach(item => {
                item.classList.remove('active');
                if (item.id === 'bottom-nav-' + section) {
                    item.classList.add('active');
                }
            });
        }
        
        // ===== API KEY FUNCTIONS =====
        function toggleApiKey() {
            const input = document.getElementById('apiKeyInput');
            const eyeIcon = document.getElementById('eyeIcon');
            const eyeText = document.getElementById('eyeText');
            
            isApiKeyVisible = !isApiKeyVisible;
            input.type = isApiKeyVisible ? 'text' : 'password';
            
            if (isApiKeyVisible) {
                eyeIcon.className = 'fas fa-eye-slash mr-2';
                eyeText.textContent = 'Hide';
            } else {
                eyeIcon.className = 'fas fa-eye mr-2';
                eyeText.textContent = 'Show';
            }
        }
        
        async function copyApiKey() {
            const input = document.getElementById('apiKeyInput');
            
            try {
                await navigator.clipboard.writeText(input.value);
                showToast('API key copied to clipboard!', 'success');
            } catch (err) {
                // Fallback
                input.select();
                document.execCommand('copy');
                showToast('API key copied!', 'success');
            }
        }
        
        // ===== LOGOUT =====
        async function handleLogout() {
            if (!confirm('Are you sure you want to logout?')) return;
            
            try {
                const response = await fetch('/auth/logout', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'include'
                });
                
                if (response.ok) {
                    window.location.href = '/login';
                }
            } catch (error) {
                console.error('Logout error:', error);
                showToast('Logout failed', 'error');
            }
        }
        
        // ===== TOAST =====
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = document.getElementById('toastIcon');
            
            toastMessage.textContent = message;
            
            if (type === 'success') {
                toastIcon.className = 'fas fa-check-circle text-green-400';
            } else if (type === 'error') {
                toastIcon.className = 'fas fa-exclamation-circle text-red-400';
            }
            
            toast.classList.remove('hidden');
            
            setTimeout(() => {
                toast.classList.add('hidden');
            }, 3000);
        }
        
        // ===== WINDOW EXPORTS =====
        window.toggleSidebar = toggleSidebar;
        window.closeSidebar = closeSidebar;
        window.showSection = showSection;
        window.toggleApiKey = toggleApiKey;
        window.copyApiKey = copyApiKey;
        window.handleLogout = handleLogout;
    </script>
</body>
</html>
